        {
          "Host": "productapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/productapi/{catchAll}",
      "UpstreamHttpMethod": [
        "Get"
      ]
    },
    {
      "DownstreamPathTemplate": "/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "orderapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/orderapi/{catchAll}",
      "UpstreamHttpMethod": [
        "Get",
        "Post"
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7430"
  }
}
